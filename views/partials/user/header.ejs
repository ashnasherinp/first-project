		<script>
			function confirmLogout() {
				Swal.fire({
					title: 'Are you sure?',
					text: "You will be logged out of your account.",
					icon: 'warning',
					showCancelButton: true,
					confirmButtonText: 'Yes, log me out!',
					cancelButtonText: 'Cancel',
					reverseButtons: true
				}).then((result) => {
					if (result.isConfirmed) {
						window.location.href = '/logout';  
					}
				});
			}
		</script>
		